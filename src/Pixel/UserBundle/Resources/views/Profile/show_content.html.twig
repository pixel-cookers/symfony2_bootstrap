<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Labels</th>
            <th>Values</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</td>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <td>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</td>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <td>Do you like waffles ?</td>
            <td>
                {% if user.likewaffles %}
                    Of course !
                {% else %}
                    Nope :s
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>Books i like</td>
            <td>
                {% if user.books %}
                <ul>
                    {% for book in user.books %}
                    <li>{{ book.title }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                None :o
                {% endif %}
            </td>
        </tr>
    </tbody>
</table>