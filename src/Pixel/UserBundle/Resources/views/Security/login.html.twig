{% extends 'PixelCoreBundle::layout.html.twig' %}

{% block content %}

    {% block fos_user_content %}

        <div class="row">
            <div class="span12">
                <div class="hero-unit">
                    <h1>Hello sweety</h1>
                    <p>This is our login page so feel free to sign in or choose from some other options presented on your right</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="span8">

                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    <fieldset>
                        <legend>You can sign in here</legend>

                        <div class="control-group">
                            <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <div class="controls">
                                <input class="input" type="text" id="username" name="_username" value="{{ last_username }}" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <div class="controls">
                                <input class="input" type="password" id="password" name="_password" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            <div class="controls">
                                <label class="checkbox inline">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Yep
                                </label>
                            </div>
                        </div>

                        <div class="form-actions">
                            <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    </fieldset>
                </form>

            </div><!-- .span6 -->

            <div class="span4">
                <h2>Or you can</h2>
                <div class="well" style="padding: 8px 0;">
                    <ul class="nav nav-list">
                        <li><a href="{{ path("fos_user_registration_register") }}"><i class="icon-user"></i> Register a new account</a></li>
                        <li><a href="{{ path("fos_user_resetting_request") }}"><i class="icon-question-sign"></i> Reset your password</a></li>
                        <li><a href="http://www.legoland.com/" target="_blank"><i class="icon-exclamation-sign"></i> Go to LEGOLAND!</a></li>
                    </ul>
                </div>
            </div><!-- .span6 -->
        </div><!-- .row -->

    {% endblock %}
{% endblock %}

{% block flashes %}
    {% if error %}
        <div class="alert alert-error" data-alert="alert">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            {{ error|trans({}, 'FOSUserBundle') }}
        </div>
    {% endif %}
{% endblock flashes %}