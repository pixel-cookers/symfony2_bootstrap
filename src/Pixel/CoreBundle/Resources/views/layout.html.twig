{% from 'PixelCoreBundle::flash.html.twig' import session_flash %}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Demo Bundle{% endblock %}</title>

    <link rel="stylesheet/less" type="text/css" href="{{ asset('bundles/pixelcore/less/main.less') }}">

    <script src="{{ asset('bundles/pixelcore/js/less-1.2.2.min.js') }}" type="text/javascript"></script>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

    <div class="container">

        <header class="main-header">
            <div class="row">
                <div class="span12">

                    <div class="navbar navbar-fixed-top">
                        <div class="navbar-inner">
                            <div class="container">
                                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </a>
                                <a class="brand" href="{{ path("core_home") }}">Bootstrap</a>
                                <div class="nav-collapse">
                                    <form class="navbar-search pull-left" method="post" action="/mopa/bootstrap">
                                        <input type="hidden" id="mopa_bootstrap_example_search__token" name="mopa_bootstrap_example_search[_token]" value="a9f7a4be4a8d1e38c730b367b9b2853522c2b89a">
                                        <input type="text" id="mopa_bootstrap_example_search_search" name="mopa_bootstrap_example_search[search]" required="required" placeholder="Recherche" class="input-medium search-query" value="">
                                    </form>
                                    <ul class="nav pull-right">
                                        <li class="dropdown first">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Bootstrap</a>
                                            <ul class="dropdown-menu menu_level_1">
                                                <li class="first"><a href="{{ path("core_css") }}">CSS</a></li>
                                                <li><a href="{{ path("core_forms") }}">Forms</a></li>
                                                <li><a href="{{ path("core_js") }}">JS</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <ul class="nav">
                                        <li class=""><a href="#">Page 1</a></li>
                                        <li class=""><a href="#">Page 2</a></li>
                                        <li class=""><a href="#">Page 3</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </header><!-- .main-header -->

        <section class="flash-section">
            <div class="row">
                <div class="span12">
                    {% block flashes %}
                        {{ session_flash() }}
                    {% endblock flashes %}
                </div>
            </div>
        </section>

        <div class="main-content">

             {% block content %}{% endblock %}

        </div><!-- .main-section -->

        <footer class="main-footer">
            <div class="row">
                <div class="span12">
                    Pied de page
                </div>
            </div>
        </footer><!-- .main-footer -->

    </div><!-- .container -->

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-transition.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-alert.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-modal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-dropdown.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-scrollspy.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-tab.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-tooltip.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-popover.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-button.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-collapse.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-carousel.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelcore/js/twitter/bootstrap-typeahead.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>