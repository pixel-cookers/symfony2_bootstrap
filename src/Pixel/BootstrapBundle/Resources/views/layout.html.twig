{% from 'PixelBootstrapBundle::flash.html.twig' import session_flash %}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Sf2 Bootstrap - {% block title %}Default title{% endblock %}</title>

    <link rel="stylesheet/less" type="text/css" href="{{ asset('bundles/pixelbootstrap/less/main.less') }}">
    {% block stylesheets %}{% endblock %}

    <script src="{{ asset('bundles/pixelbootstrap/js/less-1.2.2.min.js') }}" type="text/javascript"></script>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

    <div class="container">

        <header class="main-header">
            <div class="row">
                <div class="span12">

                    <div class="navbar navbar-fixed-top">
                        <div class="navbar-inner">
                            <div class="container">
                                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </a>
                                <a class="brand" href="{{ path("core_home") }}">Bootstrap</a>
                                <div class="nav-collapse">
                                    <form class="navbar-search pull-left" action="{{ path('propel_search') }}">
                                        <input type="text" required="required" placeholder="Search..." class="input-medium search-query" name="q" value="{% block query %}{% endblock %}">
                                    </form>

                                    <ul class="nav">
                                        <li class=""><a href="#">Page 1</a></li>
                                        <li class=""><a href="#">Page 2</a></li>
                                        <li class=""><a href="#">Page 3</a></li>
                                    </ul>

                                    <ul class="nav pull-right">
                                        <li class="dropdown first">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-exclamation-sign icon-white"></i> Bootstrap</a>
                                            <ul class="dropdown-menu menu_level_1">
                                                <li><a href="{{ path("bootstrap_css") }}"><i class="icon-font"></i> CSS</a></li>
                                                <li><a href="{{ path("bootstrap_forms") }}"><i class="icon-check"></i> Forms</a></li>
                                                <li><a href="{{ path("bootstrap_js") }}"><i class="icon-file"></i> JS</a></li>
                                            </ul>
                                        </li>
                                        <li class="divider-vertical"></li>
                                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                        <li>
                                            <p class="navbar-text pull-right">
                                                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                            </p>
                                        </li>
                                        <li class="divider-vertical"></li>
                                        <li class="dropdown first">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> User menu</a>
                                            <ul class="dropdown-menu menu_level_1">
                                                <li><a href="{{ path('fos_user_profile_show') }}"><i class="icon-th-list"></i> See your profile</a></li>
                                                <li><a href="{{ path('fos_user_resetting_request') }}"><i class="icon-repeat"></i> Reset your password</a></li>
                                                <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                                            </ul>
                                        </li>
                                        {% else %}
                                        <li>
                                            <a href="{{ path('fos_user_security_login') }}"><i class="icon-user icon-white"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                                        </li>
                                        {% endif %}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </header><!-- .main-header -->

        <section class="flash-section">
            <div class="row">
                <div class="span12">
                    {% block flashes %}
                        {{ session_flash() }}
                    {% endblock flashes %}
                </div>
            </div>
        </section>

        <div class="main-content">

             {% block content %}{% endblock %}

        </div><!-- .main-section -->

        <footer class="main-footer">
            <div class="row">
                <div class="span12">
                    <div class="pull-right">
                        <p><a href="#">Back to the top</a> <i class="icon-chevron-up"></i></p>
                    </div>
                </div>
            </div>
        </footer><!-- .main-footer -->

    </div><!-- .container -->

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-transition.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-alert.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-modal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-dropdown.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-scrollspy.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-tab.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-tooltip.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-popover.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-button.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-collapse.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-carousel.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pixelbootstrap/js/twitter/bootstrap-typeahead.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>